---
import Layout from '@/layouts/Layout.astro'
import Navigation from '@/components/Navigation.vue'
import Footer from '@/components/Footer.vue'
import { Button } from '@/components/ui/button'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
import { Heart, Star, Phone, Sparkles, Clock, MapPin, Mail } from 'lucide-vue-next'
---

<Layout title="Zahnärztliche Gemeinschaftspraxis Dr. Hirsch & Brüggemann - Fürth" description="Zahnärztliche Gemeinschaftspraxis Dr. Ulrike Hirsch und Elke Brüggemann in Fürth. Termine nach Vereinbarung.">
  <Navigation client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 lg:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/20 via-background to-secondary/20"></div>
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
        <div class="text-center max-w-4xl mx-auto">
          <Badge variant="secondary" class="mb-6">
            <Sparkles class="h-3 w-3 mr-1" />
            Zahnheilkunde in Fürth
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-foreground mb-6">
            Zahnärztliche
            <span class="text-primary">Gemeinschaftspraxis</span>
            <br />
            Dr. Hirsch & Brüggemann
          </h1>
          
          <p class="text-xl text-muted-foreground mb-8 leading-relaxed">
            Ihre Zahngesundheit liegt uns am Herzen. In unserer modernen Praxis in Fürth 
            bieten wir Ihnen umfassende zahnmedizinische Behandlungen in entspannter Atmosphäre.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button size="lg" class="text-lg px-8">
              <Phone class="mr-2 h-5 w-5" />
              Termin vereinbaren
            </Button>
            <Button variant="outline" size="lg" class="text-lg px-8">
              <MapPin class="mr-2 h-5 w-5" />
              Praxis finden
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-muted/30">
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-foreground mb-4">
            Unsere Leistungen
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Moderne Zahnmedizin mit persönlicher Betreuung in familiärer Atmosphäre
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">🦷</span>
              </div>
              <CardTitle>Allgemeine Zahnheilkunde</CardTitle>
              <CardDescription>
                Umfassende Vorsorge, Behandlung und Beratung für gesunde Zähne
              </CardDescription>
            </CardHeader>
          </Card>

          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">✨</span>
              </div>
              <CardTitle>Prophylaxe</CardTitle>
              <CardDescription>
                Professionelle Zahnreinigung und präventive Maßnahmen
              </CardDescription>
            </CardHeader>
          </Card>

          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">🔧</span>
              </div>
              <CardTitle>Füllungstherapie</CardTitle>
              <CardDescription>
                Moderne Füllungsmaterialien für langanhaltende Zahngesundheit
              </CardDescription>
            </CardHeader>
          </Card>

          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">👑</span>
              </div>
              <CardTitle>Zahnersatz</CardTitle>
              <CardDescription>
                Kronen, Brücken und Prothesen für ein natürliches Lächeln
              </CardDescription>
            </CardHeader>
          </Card>

          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">🌍</span>
              </div>
              <CardTitle>Mehrsprachige Betreuung</CardTitle>
              <CardDescription>
                Behandlung auf Deutsch und Englisch
              </CardDescription>
            </CardHeader>
          </Card>

          <Card class="border-border/50 hover:shadow-lg transition-shadow">
            <CardHeader class="pb-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                <span class="text-2xl">⏰</span>
              </div>
              <CardTitle>Flexible Termine</CardTitle>
              <CardDescription>
                Termine nach Vereinbarung für Ihre Bequemlichkeit
              </CardDescription>
            </CardHeader>
          </Card>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20">
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl lg:text-4xl font-bold text-foreground mb-6">
            Vereinbaren Sie einen Termin
          </h2>
          <p class="text-lg text-muted-foreground mb-8">
            Wir freuen uns darauf, Sie in unserer Praxis begrüßen zu dürfen. 
            Kontaktieren Sie uns für eine individuelle Beratung und Terminvereinbarung.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button size="lg" class="text-lg px-8">
              <Phone class="mr-2 h-5 w-5" />
              0911/7568560
            </Button>
            <Button variant="outline" size="lg" class="text-lg px-8">
              <Mail class="mr-2 h-5 w-5" />
              E-Mail senden
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>