---
import Layout from '@/layouts/Layout.astro'
import Navigation from '@/components/Navigation.vue'
import Footer from '@/components/Footer.vue'
import { Button } from '@/components/ui/button'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'
import { Input } from '@/components/ui/input'
import { Label } from '@/components/ui/label'
import { Textarea } from '@/components/ui/textarea'
import { Badge } from '@/components/ui/badge'
import { Mail, Phone, MapPin, Heart, Send } from 'lucide-vue-next'
---

<Layout title="Contact - Mama's Website" description="Get in touch with Mama">
  <Navigation client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="py-20 lg:py-32">
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <Badge variant="secondary" class="mb-6">
            <Mail class="h-3 w-3 mr-1" />
            Get In Touch
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-foreground mb-6">
            Contact
            <span class="text-primary">Mama</span>
          </h1>
          
          <p class="text-xl text-muted-foreground mb-8 leading-relaxed">
            We'd love to hear from you! Whether you have a question, want to say hello, 
            or just brighten Mama's day, don't hesitate to reach out.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-muted/30">
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold text-foreground mb-8">
              Let's Connect
            </h2>
            
            <div class="space-y-6 mb-8">
              <Card>
                <CardHeader>
                  <CardTitle class="flex items-center text-lg">
                    <Mail class="mr-3 h-5 w-5 text-blue-600" />
                    Email
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-muted-foreground">mama@example.com</p>
                  <p class="text-sm text-muted-foreground mt-1">
                    Best way to reach Mama for important messages
                  </p>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle class="flex items-center text-lg">
                    <Phone class="mr-3 h-5 w-5 text-green-600" />
                    Phone
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-muted-foreground">+1 (555) 123-4567</p>
                  <p class="text-sm text-muted-foreground mt-1">
                    For urgent matters or just to hear her lovely voice
                  </p>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle class="flex items-center text-lg">
                    <MapPin class="mr-3 h-5 w-5 text-red-600" />
                    Location
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-muted-foreground">Somewhere Special</p>
                  <p class="text-sm text-muted-foreground mt-1">
                    Where love and warmth are always present
                  </p>
                </CardContent>
              </Card>
            </div>

            <div class="bg-primary/5 rounded-lg p-6 border border-primary/20">
              <div class="flex items-start">
                <Heart class="h-6 w-6 text-red-500 mt-1 mr-3 flex-shrink-0" />
                <div>
                  <h3 class="font-semibold text-foreground mb-2">
                    A Note About Contact
                  </h3>
                  <p class="text-sm text-muted-foreground">
                    Please note that this is a demonstration website. The contact information 
                    shown here is for example purposes only. In a real implementation, 
                    you would replace these with actual contact details.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <Card>
              <CardHeader>
                <CardTitle class="text-2xl">Send a Message</CardTitle>
                <CardDescription>
                  Fill out the form below and we'll get back to you as soon as possible.
                </CardDescription>
              </CardHeader>
              <CardContent>
                <form class="space-y-6" action="#" method="post">
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="space-y-2">
                      <Label for="firstName">First Name</Label>
                      <Input 
                        id="firstName" 
                        name="firstName"
                        placeholder="Your first name"
                        required
                      />
                    </div>
                    <div class="space-y-2">
                      <Label for="lastName">Last Name</Label>
                      <Input 
                        id="lastName" 
                        name="lastName"
                        placeholder="Your last name"
                        required
                      />
                    </div>
                  </div>

                  <div class="space-y-2">
                    <Label for="email">Email</Label>
                    <Input 
                      id="email" 
                      name="email"
                      type="email"
                      placeholder="your.email@example.com"
                      required
                    />
                  </div>

                  <div class="space-y-2">
                    <Label for="subject">Subject</Label>
                    <Input 
                      id="subject" 
                      name="subject"
                      placeholder="What's this about?"
                      required
                    />
                  </div>

                  <div class="space-y-2">
                    <Label for="message">Message</Label>
                    <Textarea 
                      id="message" 
                      name="message"
                      placeholder="Your message for Mama..."
                      rows={5}
                      required
                    />
                  </div>

                  <Button type="submit" size="lg" class="w-full">
                    <Send class="mr-2 h-4 w-4" />
                    Send Message
                  </Button>
                </form>
              </CardContent>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20">
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold text-foreground mb-4">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Common questions about contacting Mama and this website
          </p>
        </div>

        <div class="max-w-3xl mx-auto space-y-6">
          <Card>
            <CardHeader>
              <CardTitle class="text-lg">How quickly will Mama respond?</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Mama tries to respond to all messages within 24-48 hours. However, 
                please be patient as she might be busy spreading joy and love elsewhere!
              </p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <CardTitle class="text-lg">Is this a real contact form?</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                This is a demonstration website showcasing Astro.js and shadcn-vue components. 
                The contact form is functional in terms of UI but would need backend integration 
                to actually send messages.
              </p>
            </CardContent>
          </Card>

          <Card>
            <CardHeader>
              <CardTitle class="text-lg">Can I visit Mama in person?</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-muted-foreground">
                Mama's heart is always open to visitors! However, please contact first 
                to arrange a proper time for tea and cookies.
              </p>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>